<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zlibrary.Noproxy.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Zlibrary.Noproxy.Maui"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="欢迎使用 Z-Library 无代理版本&#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Z-Library No Proxy MAUI App" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="BackupBtn"
                Text="🔗 前往数据备份页面"
                SemanticProperties.Hint="Navigate to Data Backup Page"
                Clicked="OnBackupPageClicked"
                HorizontalOptions="Fill"
                BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#66BB6A}"
                TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
