<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Zlibrary.Noproxy.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Zlibrary.Noproxy.Maui"
    Title="Zlibrary.Noproxy.Maui">

    <!-- 底部导航栏 -->
    <TabBar>
        <!-- 图书搜索标签 -->
        <Tab Title="搜索" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:Views.BookSearchView}" Route="BookSearchView" />
        </Tab>

        <!-- 下载标签 -->
        <Tab Title="下载" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:Views.BookDownloadView}" Route="BookDownloadView" />
        </Tab>

        <!-- 日志标签 -->
        <Tab Title="日志" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:Views.LogView}" Route="LogView" />
        </Tab>
    </TabBar>

</Shell>
